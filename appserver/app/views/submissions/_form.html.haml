= form_for @submission do |f|
  - if @submission.errors.any?
    #error_explanation
      %h2= "#{pluralize(@submission.errors.count, "error")} prohibited this submission from being saved:"
      %ul
        - @submission.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :user_id
    = f.text_field :user_id
  .field
    = f.label :course_id
    = f.text_field :course_id
  .field
    = f.label :code
    = f.text_area :code
  .field
    = f.label :passed
    = f.check_box :passed
  .field
    = f.label :score
    = f.text_field :score
  .field
    = f.label :score
    = f.text_field :score
  .field
    = f.label :submitted_at
    = f.datetime_select :submitted_at
  .actions
    = f.submit 'Save'
