.container
  - flash.each do |name, msg|
    - if msg.is_a?(String)
      %div{ class: 'alert alert-dismissable alert-'+(name.to_s == 'notice' ? 'success' : 'danger') }
        %button.close{ 'data-dismiss' => 'alert' }
          %span{ 'aria-hidden' => 'true' } &times;
        = content_tag :div, msg, :id => 'flash_'+name
  %p#notice= notice

  %p
    %b Level:
    = @level.name

#canvas-container


%script{ type: 'text/javascript' }
  function get_level_tile_map() {
  = "return #{@level.tilemap}".html_safe
  }
