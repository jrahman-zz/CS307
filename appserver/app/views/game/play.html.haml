.row
  .col-md-3
    = simple_form_for Submission.new, url: grade_submission_path, class: 'submission-form', html: { onsubmit: "return injectCode('.code-editor')" } do |f|
      = f.error_notification
      .prompt=@level.prompt
      %div#code-editor

      .form-actions
        .pull-right
          -# I just want a stinkin input button without specifying a submit url, Haml.
          <input type="button" value="Test" class="btn btn-primary" id="submit_button" />
          -#= f.submit 'Run', class: 'btn btn-primary'

  .col-md-9
    %p
      %b Level:
      = @level.name

    #canvas-container


%script{ type: 'text/javascript' }
  function get_level_tilemap() {
  = "\treturn '#{@level.tilemap}';".html_safe
  }

  function get_hero_gender() {
  -# "\treturn '#{}';".html_safe
  = "\treturn 'girl';".html_safe
  }
