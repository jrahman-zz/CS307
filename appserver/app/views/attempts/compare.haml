.page-header
  %h1
    Comparing Attempts
    = link_to "##{@from.id}", @from
    and
    = link_to "##{@to.id}", @to

%style{ type: 'text/css' }= Diffy::CSS
= Diffy::Diff.new(@from.code, @to.code, include_plus_and_minus_in_html: true, include_diff_info: true, context: 4).to_s(:html).html_safe

%br

.row
  .col-md-6
    %h2
      = link_to "##{@from.id}", @from
      %small= @from.completed ? "PASSED" : "FAILED"
    %pre<= @from.code

  .col-md-6
    %h2
      = link_to "##{@to.id}", @to
      %small= @to.completed ? "PASSED" : "FAILED"
    %pre<= @to.code
