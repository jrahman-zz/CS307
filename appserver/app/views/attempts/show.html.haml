.page-header
  %h1
    Attempt
    %small
      Submitted on
      = @attempt.submitted_at.strftime('%b %d, %Y at %I:%m %p,')
      Passed:
      = checkmark @attempt.result_id, color: true

.row
  .col-md-6
    %pre<= @attempt.code

  .col-md-6
    %h2 Hints
    - if @attempt.hint
      %p= @attempt.hint
    - else
      %p No hints given.


.form-actions
  = link_to 'Back', :back, class: 'btn btn-default'
