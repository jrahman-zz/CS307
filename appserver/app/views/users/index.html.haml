%h1 Listing users

%table.table.table-striped.vertical-aligned
  %tr
    %th Name
    %th Email Address 
    %th Options

  - @users.each do |user|
    %tr
      %td= user.name
      %td= user.email
      %td
        = link_to 'Show', user, class: 'btn btn-info btn-sm'
        = link_to 'Edit', edit_user_path(user), class: 'btn btn-warning btn-sm'
        = link_to 'Destroy', user, :method => :delete, :data => { :confirm => 'Are you sure?' }, class: 'btn btn-danger btn-sm'

%br

= link_to 'New User', new_user_path
